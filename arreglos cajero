#include<stdio.h>
#include<string.h>

// Funcion para determinar que el numero sea positivo
int validar(float x)
{
    if(x > 0)
    {
        printf("La cantidad ingresada es valida.\n");
        return 1;
    }
    else
    {
        printf("La cantidad ingresada es negativa, ingrese un numero positivo\n");
        return 0;
    }
}

int main()
{
    // Nips para las cuentas
    char nipV1[] = "1234", nipV2[] = "1701", nipV3[] = "7766";
    char nipingresado[20];
    int intentos = 0;
    int maxintentos = 3;
    int operaciones, cuentas;
    float num;
    float v;
    float saldoactual;
    int bucle = 1;

    // Saldo inicial de las cuentas
    float saldos[3] = {1000, 2000, 10000};

    printf("\n==========BIENVENIDO A LA PRACTICAJA CUCEI==========\n");

    printf("\nPor favor seleccione la cuenta en la que quiere realizar una operacion:\n");
    printf("1.- Cuenta 1\n");
    printf("2.- Cuenta 2\n");
    printf("3.- Cuenta 3\n");
    scanf("%d", &cuentas);

    switch(cuentas)
    {
        case 1:
            printf("=====CUENTA 1=====\n");
            saldoactual = saldos[0];
            break;
        case 2:
            printf("=====CUENTA 2=====\n");
            saldoactual = saldos[1];
            break;
        case 3:
            printf("=====CUENTA 3=====\n");
            saldoactual = saldos[2];
            break;
        default:
            printf("La opcion ingresada no es valida.\n");
            return 0;
    }

    while(intentos < maxintentos)
    {
        printf("\n*****INGRESE SU NIP*****\n");
        scanf("%s", nipingresado);

        if ((cuentas == 1 && strcmp(nipingresado, nipV1) == 0) ||
            (cuentas == 2 && strcmp(nipingresado, nipV2) == 0) ||
            (cuentas == 3 && strcmp(nipingresado, nipV3) == 0))
        {
            printf("NIP ingresado correctamente\n");
            break;
        }
        else
        {
            intentos++;
            printf("El NIP ingresado es incorrecto\n");
        }

        if(intentos == maxintentos)
        {
            printf("Alcanzaste el número de intentos\n");
            return 0;
        }
    }

    do
    {
        printf("\nPor favor ingrese la opcion deseada:\n\n");
        printf("1.- Consulta de saldo\n");
        printf("2.- Depositos\n");
        printf("3.- Retiros\n");
        printf("4.- Salir de la Practicaja\n");
        scanf("%d", &operaciones);

        switch(operaciones)
        {
            case 1:
                printf("=========CONSULTA DE SALDO==========\n");
                printf("Su saldo actual es de: %.2f\n", saldoactual);
                break;

            case 2:
                printf("=========DEPOSITOS==========\n");
                printf("Ingrese la cantidad que desea depositar: \n");
                scanf("%f", &num);

                // Validar la cantidad para el depósito
                v = validar(num);
                while (v != 1)  // Continuar pidiendo hasta que sea válida
                {
                    printf("Ingrese una cantidad positiva para depositar: \n");
                    scanf("%f", &num);
                    v = validar(num);
                }

                saldoactual += num;
                printf("Su deposito se realizo con exito. El saldo actual es: %.2f\n", saldoactual);
                break;

            case 3:
                printf("=========RETIROS==========\n");
                printf("Ingrese la cantidad que desea retirar: \n");
                scanf("%f", &num);

                // Validar la cantidad para el retiro
                v = validar(num);
                while (v != 1 || num > saldoactual)  // Validar cantidad positiva y que no sea mayor al saldo
                {
                    if (num > saldoactual) {
                        printf("Pero no tienes esa cantidad, por favor ingrese una cantidad que tengas:\n");
                    }
                    printf("Ingrese una cantidad positiva para retirar: \n");
                    scanf("%f", &num);
                    v = validar(num);
                }

                saldoactual -= num;
                printf("Su retiro se realizó con éxito. La cantidad restante en su cuenta es: %.2f\n", saldoactual);
                break;

            case 4:
                printf("\nGracias por usar la Practicaja Cucei, tenga un buen dia.\n");
                return 0;

            default:
                printf("La opcion ingresada no es correcta.\n");
        }

        printf("\nDesea realizar alguna otra operacion?\n");
        printf("1.- Si\n");
        printf("2.- No\n");
        scanf("%d", &bucle);

    } while (bucle != 2);

    printf("\nGracias por usar la Practicaja Cucei, tenga un buen dia.\n");

    return 0;
}
